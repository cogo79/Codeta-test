.userConfirmBackGround
	position fixed
	top 0px
	width 100%
	height 100%
	background-color: rgba(0,0,0,0.7)

.userConfirmBackGround > .container
	width 390px
	height 240px
	background-color white
	border-radius 10px
	margin auto
	margin-top 10%
	position relative

.userConfirmBackGround > .container > p
	width 360px
	margin 15px
	padding-top 15px

.userConfirmBackGround > .container > button
	width 70px
	border-radius 10px
	margin 8px
	margin-left 30px
	margin-right 30px
	position absolute
	bottom 0px

.userConfirmBackGround > .container > button.confirm
	right 0px